<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mybg"
    android:orientation="vertical"
    tools:context=".LocationListActivity">

    <LinearLayout
        android:id="@+id/btlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/location_button_bg">

        <Button
            android:id="@+id/btg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:background="@drawable/btnpic"
            android:text="G"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:background="@drawable/btnpic"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:background="@drawable/btnpic"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:background="@drawable/btnpic"
            android:text="3"
            android:textSize="20sp" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fargmentcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btlayout"
        android:foregroundGravity="bottom"></FrameLayout>


</RelativeLayout>